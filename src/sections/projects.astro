---
import { getCollection } from "astro:content";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
} from "@/components/ui/card";
import { ExternalLink, Github, MonitorCheck } from "lucide-react";
import { Badge } from "@/components/ui/badge";
import FadeContent from "@/components/FadeContent";
import SplitText from "@/components/SplitText";

const allProjects = await getCollection("projects");

// Ordenar proyectos para que MemoryNinja aparezca primero
const sortedProjects = allProjects.sort((a, b) => {
  const aIsMemoryNinja = a.data.title.toLowerCase().includes("memory");
  const bIsMemoryNinja = b.data.title.toLowerCase().includes("memory");

  if (aIsMemoryNinja && !bIsMemoryNinja) return -1;
  if (!aIsMemoryNinja && bIsMemoryNinja) return 1;
  return 0;
});

const projects = {
  projects: sortedProjects.map((project) => ({
    title: project.data.title,
    description: project.data.description,
    image: project.data.imageURL,
    technologies: project.data.technologies,
    demoUrl: project.data.demoURL,
    githubUrl: project.data.githubURL,
    landingUrl: project.data.landingURL,
  })),
};

console.log(projects.projects.map((p) => p.landingUrl));
---

<section
  id="projects"
  class="flex flex-col min-h-screen items-center justify-center bg-linear-to-br from-[#FFFF] via-[#d1d2d4] to-[#c5c9ca] overflow-hidden"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2
        class="text-4xl sm:text-5xl font-bold text-[#1E2952] mt-4 md:mt-0 mb-4"
      >
        Proyectos Destacados
      </h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Aplicaciones web que transforman ideas en productos escalables y
        rentables
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {
        projects.projects.map((project, index) => (
          <FadeContent
            client:load
            delay={0.4}
            duration={1.4}
            initialOpacity={0.2}
          >
            <Card
              key={index}
              className="group overflow-hidden hover:scale-105 transition-transform duration-300"
            >
              <div class="relative overflow-hidden">
                <a
                  href={`/projects/${project.title.toLowerCase().replace(/\s+/g, "-")}`}
                >
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-linear-to-t from-[#1E2952]/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                </a>
              </div>

              <CardHeader>
                <CardTitle className="text-[#1E2952]">
                  {project.title}
                </CardTitle>
                <CardDescription>{project.description}</CardDescription>
              </CardHeader>

              <CardContent>
                <div class="flex flex-wrap gap-2">
                  {project.technologies.map((tech, techIndex) => (
                    <Badge key={techIndex} variant="secondary">
                      {tech}
                    </Badge>
                  ))}
                </div>
              </CardContent>

              <CardFooter className="gap-2">
                {project.demoUrl && (
                  <Button size="sm" className="flex-1">
                    <a
                      target="_blank"
                      href={project.demoUrl}
                      class="flex items-center"
                      rel="noopener noreferrer"
                    >
                      <ExternalLink className="w-4 h-4 mr-1" />
                      <span>Demo</span>
                    </a>
                  </Button>
                )}

                <Button size="sm" variant="outline" className="flex-1">
                  <a
                    target="_blank"
                    href={project.landingUrl}
                    class="flex items-center"
                    rel="noopener noreferrer"
                  >
                    <MonitorCheck className="w-4 h-4 mr-1" />
                    <span>Web inicial</span>
                  </a>
                </Button>
                <Button size="sm" variant="outline" className="flex-1">
                  <a
                    target="_blank"
                    href={project.githubUrl}
                    class="flex items-center"
                    rel="noopener noreferrer"
                  >
                    <Github className="w-4 h-4 mr-1" />
                    <span>Código</span>
                  </a>
                </Button>
              </CardFooter>
            </Card>
          </FadeContent>
        ))
      }
    </div>

    <div class="flex flex-col justify-center items-center">
      <SplitText
        client:load
        duration={1}
        ease="bounce.out"
        splitType="words"
        className="text-lg sm:text-xl mt-7 mb-7"
        tag="p"
      >
        Más proyectos en desarrollo ⚙️... Pronto estarán disponibles aquí.
        Mientras tanto, puedes seguir el progreso en mi GitHub.
      </SplitText>

      <Button size="xl" className="group mb-4">
        <a
          href="https://github.com/EleanQuintero"
          target="_blank"
          class="flex flex-row gap-3"
        >
          <Github
            className="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform"
          /> Ver más en GitHub
        </a>
      </Button>
    </div>
  </div>
</section>
